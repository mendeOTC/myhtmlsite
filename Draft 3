                            <option value="AL">Alabama</option><option value="AK">Alaska</option><option value="AZ">Arizona</option><option value="AR">Arkansas</option><option value="CA">California</option><option value="CO">Colorado</option><option value="CT">Connecticut</option><option value="DE">Delaware</option><option value="FL">Florida</option><option value="GA">Georgia</option><option value="HI">Hawaii</option><option value="ID">Idaho</option><option value="IL">Illinois</option><option value="IN">Indiana</option><option value="IA">Iowa</option><option value="KS">Kansas</option><option value="KY">Kentucky</option><option value="LA">Louisiana</option><option value="ME">Maine</option><option value="MD">Maryland</option><option value="MA">Massachusetts</option><option value="MI">Michigan</option><option value="MN">Minnesota</option><option value="MS">Mississippi</option><option value="MO">Missouri</option><option value="MT">Montana</option><option value="NE">Nebraska</option><option value="NV">Nevada</option><option value="NH">New Hampshire</option><option value="NJ">New Jersey</option><option value="NM">New Mexico</option><option value="NY">New York</option><option value="NC">North Carolina</option><option value="ND">North Dakota</option><option value="OH">Ohio</option><option value="OK">Oklahoma</option><option value="OR">Oregon</option><option value="PA">Pennsylvania</option><option value="RI">Rhode Island</option><option value="SC">South Carolina</option><option value="SD">South Dakota</option><option value="TN">Tennessee</option><option value="TX">Texas</option><option value="UT">Utah</option><option value="VT">Vermont</option><option value="VA">Virginia</option><option value="WA">Washington</option><option value="WV">West Virginia</option><option value="WI">Wisconsin</option><option value="WY">Wyoming</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="homeZipCode">Home Zip Code</label>
                        <input type="text" id="homeZipCode" name="homeZipCode" maxlength="5" required>
                    </div>
                    <div class="form-navigation-buttons">
                        <button type="button" id="prevBtn2" class="prev-btn">Previous</button>
                        <button type="button" class="next-btn">Next</button>
                    </div>
                </div>

                <div id="step4" class="form-section">
                    <h2>Upload Documents & Signature</h2>
                    <div class="form-group">
                        <label>Upload Business Bank Statements (Last 3 months)</label>
                        <div class="file-upload-box" onclick="document.getElementById('bankStatements').click()">
                            <i class="fas fa-cloud-upload-alt"></i>
                            <p>Drag & Drop files here or click to browse</p>
                            <input type="file" id="bankStatements" name="bankStatements" accept=".pdf, .doc, .docx, .png, .jpg" multiple>
                            </div>
                    </div>
                    <div class="form-group">
                        <label for="ownerNameSignature">Owner Name (for signature)</label>
                        <input type="text" id="ownerNameSignature" name="ownerNameSignature" placeholder="Full Legal Name" required>
                    </div>
                    <div class="form-group">
                        <label for="signatureDate">Date</label>
                        <input type="date" id="signatureDate" name="signatureDate" required>
                    </div>
                    <div class="form-group">
                        <label for="signatureCanvas">Signature</label>
                        <div class="signature-canvas-container">
                            <canvas id="signatureCanvas" width="500" height="150" style="border: 1px transparent;"></canvas>
                            <button type="button" id="clearSignature">Clear</button>
                        </div>
                        <input type="hidden" id="signatureData" name="signatureData">
                    </div>
                    <div class="form-navigation-buttons">
                        <button type="button" id="prevBtn3" class="prev-btn">Previous</button>
                        <button type="submit">Submit Application</button>
                    </div>
                </div>
            </form>
        </main>
    </div>

    <script>
        const formSections = document.querySelectorAll('.form-section');
        const stepButtons = document.querySelectorAll('.step-btn');
        const nextButtons = document.querySelectorAll('.next-btn');
        const prevButtons = document.querySelectorAll('.prev-btn');
        let currentStep = 0; // 0-indexed

        // Signature Pad Logic
        const signatureCanvas = document.getElementById('signatureCanvas');
        const ctx = signatureCanvas.getContext('2d');
        const clearSignatureBtn = document.getElementById('clearSignature');
        const signatureDataInput = document.getElementById('signatureData');
        let drawing = false;

        function resizeCanvas() {
            const container = signatureCanvas.parentElement;
            // Set canvas display size
            signatureCanvas.style.width = '100%';
            signatureCanvas.style.height = '100%';
            // Set canvas internal drawing surface size
            signatureCanvas.width = container.clientWidth - 2; // Account for border
            signatureCanvas.height = container.clientHeight - 2; // Account for border
            ctx.lineJoin = 'round';
            ctx.lineCap = 'round';
            ctx.lineWidth = 2;
            ctx.strokeStyle = '#000';
            // If there's existing signature data, redraw it after resize
            if (signatureDataInput.value) {
                const img = new Image();
                img.onload = () => {
                    ctx.drawImage(img, 0, 0, signatureCanvas.width, signatureCanvas.height);
                };
                img.src = signatureDataInput.value;
            }
        }

        window.addEventListener('resize', resizeCanvas);
        resizeCanvas(); // Initial resize

        signatureCanvas.addEventListener('mousedown', (e) => {
            drawing = true;
            ctx.beginPath();
            const rect = signatureCanvas.getBoundingClientRect();
            ctx.moveTo(e.clientX - rect.left, e.clientY - rect.top);
        });

        signatureCanvas.addEventListener('mousemove', (e) => {
            if (!drawing) return;
            const rect = signatureCanvas.getBoundingClientRect();
            ctx.lineTo(e.clientX - rect.left, e.clientY - rect.top);
            ctx.stroke();
        });

        signatureCanvas.addEventListener('mouseup', () => {
            drawing = false;
            signatureDataInput.value = signatureCanvas.toDataURL(); // Save signature as data URL
        });

        signatureCanvas.addEventListener('mouseout', () => {
            drawing = false;
        });

        clearSignatureBtn.addEventListener('click', () => {
            ctx.clearRect(0, 0, signatureCanvas.width, signatureCanvas.height);
            signatureDataInput.value = '';
        });

        // Touch events for mobile signature
        signatureCanvas.addEventListener('touchstart', (e) => {
            e.preventDefault(); // Prevent scrolling
            drawing = true;
            const touch = e.touches[0];
            const rect = signatureCanvas.getBoundingClientRect();
            ctx.beginPath();
            ctx.moveTo(touch.clientX - rect.left, touch.clientY - rect.top);
        });

        signatureCanvas.addEventListener('touchmove', (e) => {
            e.preventDefault(); // Prevent scrolling
            if (!drawing) return;
            const touch = e.touches[0];
            const rect = signatureCanvas.getBoundingClientRect();
            ctx.lineTo(touch.clientX - rect.left, touch.clientY - rect.top);
            ctx.stroke();
        });

        signatureCanvas.addEventListener('touchend', () => {
            drawing = false;
            signatureDataInput.value = signatureCanvas.toDataURL();
        });


        // Function to show/hide steps
        function showStep(stepIndex) {
            formSections.forEach((section, index) => {
                section.classList.remove('active');
                if (index === stepIndex) {
                    section.classList.add('active');
                }
            });

            stepButtons.forEach((button, index) => {
                button.classList.remove('active');
                if (index === stepIndex) {
                    button.classList.add('active');
                }
            });

            currentStep = stepIndex;
            // Scroll to top of the form section when changing steps on mobile
            if (window.innerWidth <= 992) {
                const formContentArea = document.querySelector('.form-content-area');
                if (formContentArea) {
                    formContentArea.scrollTop = 0; // Scroll to top of content area
                }
            }
        }

        // Initialize form to show the first step
        document.addEventListener('DOMContentLoaded', () => {
            showStep(0);
        });

        // Basic validation function for required fields in the current step
        function validateCurrentStep(stepElement) {
            const inputs = stepElement.querySelectorAll('input[required], select[required], textarea[required]');
            let allValid = true;

            inputs.forEach(input => {
                let isValid = true;

                // Handle text, email, number, date, select, textarea
                if (input.type !== 'radio' && input.type !== 'file' && input.value.trim() === '') {
                    isValid = false;
                }

                // Handle radio groups
                if (input.type === 'radio') {
                    const radioGroupName = input.name;
                    if (stepElement.querySelector(`input[name="${radioGroupName}"]:checked`) === null) {
                        isValid = false;
                    }
                }

                // Apply/remove error styling
                if (!isValid) {
                    allValid = false;
                    input.style.borderColor = 'red';
                    // For radio groups, apply error to their parent label for better visibility
                    if (input.type === 'radio') {
                        const label = input.closest('label');
                        if (label) label.style.borderColor = 'red'; // This won't work on the label, targeting direct input
                        // A better approach for radio groups is to highlight the whole group or its label.
                        // For simplicity, we'll keep it on the radio input itself for now, but acknowledge it's not ideal for UX
                    }
                } else {
                    input.style.borderColor = ''; // Reset
                    if (input.type === 'radio') {
                        const label = input.closest('label');
                        if (label) label.style.borderColor = '';
                    }
                }
            });

            // Specific validation for signature (Step 4)
            if (stepElement.id === 'step4') {
                const signatureInput = document.getElementById('signatureData');
                if (signatureInput.value === '') {
                    allValid = false;
                    document.querySelector('.signature-canvas-container').style.border = '1px solid red';
                } else {
                    document.querySelector('.signature-canvas-container').style.border = '1px solid var(--input-border)'; // Reset
                }
            }

            return allValid;
        }

        nextButtons.forEach(button => {
            button.addEventListener('click', () => {
                const currentFormSection = formSections[currentStep];
                if (validateCurrentStep(currentFormSection)) {
                    if (currentStep < formSections.length - 1) {
                        showStep(currentStep + 1);
                    }
                } else {
                    alert('Please fill out all required fields correctly before proceeding.');
                }
            });
        });

        prevButtons.forEach(button => {
            button.addEventListener('click', () => {
                if (currentStep > 0) {
                    showStep(currentStep - 1);
                }
            });
        });

        stepButtons.forEach((button, index) => {
            button.addEventListener('click', () => {
                // Allow direct navigation backwards without re-validation
                if (index < currentStep) {
                    showStep(index);
                } else { // Forwards navigation, validate current step
                    const currentFormSection = formSections[currentStep];
                    if (validateCurrentStep(currentFormSection)) {
                         showStep(index);
                    } else {
                         alert('Please fill out all required fields correctly before proceeding.');
                    }
                }
            });
        });

        // Basic form submission handler (for demonstration)
        document.getElementById('applicationForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default form submission
            if (validateCurrentStep(formSections[currentStep])) {
                alert('Application Submitted! (This is a demo. Data is not actually sent yet.)');
                // Here you would typically collect all form data and send it to your server or Jotform API
                const formData = new FormData(this);
                // Example of logging data:
                // for (let [key, value] of formData.entries()) {
                //     console.log(`${key}: ${value}`);
                // }
                // console.log('Signature Data URL:', document.getElementById('signatureData').value);
            } else {
                alert('Please fill out all required fields correctly before submitting.');
            }
        });

        // Reset border color on input change
        document.querySelectorAll('input, select, textarea').forEach(input => {
            input.addEventListener('input', function() {
                this.style.borderColor = ''; // Reset individual input border
            });
            input.addEventListener('change', function() { // For selects, radios, dates
                this.style.borderColor = '';
            });
        });

        // Funding Amount Dollar Sign toggle
        const fundingAmountInput = document.getElementById('fundingAmount');
        fundingAmountInput.addEventListener('input', function() {
            const parentDiv = this.parentNode;
            if (this.value.length > 0) {
                parentDiv.classList.add('input-with-dollar');
            } else {
                parentDiv.classList.remove('input-with-dollar');
            }
        });
        // Initial check in case there's a pre-filled value
        if (fundingAmountInput.value.length > 0) {
            fundingAmountInput.parentNode.classList.add('input-with-dollar');
        }

    </script>
</body>
</html>
